{
  "name": "rsschool-app",
  "private": true,
  "scripts": {
    "postinstall": "concurrently \"npm install --prefix client\" \"npm install --prefix server\"",
    "start": "concurrently \"npm start --prefix client\" \"npm start --prefix server\"",
    "server:build": "npm run build --prefix server",
    "server:start": "npm start --prefix client",
    "client:build": "npm run build --prefix client",
    "client:start": "npm start --prefix client",
    "test-watch": "npm run test-watch --prefix client",
    "test": "npm run test --prefix client",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"server/**/*.{ts,tsx}\" \"client/**/*.{ts,tsx,js}\" \"serverless/**/*.{ts,tsx,js}\"",
    "ci:format": "prettier --check \"server/**/*.{ts,tsx}\" \"client/**/*.{ts,tsx,js}\"",
    "ci:lint": "eslint . --ext .ts,.tsx",
    "ci:build": "concurrently \"npm run build --prefix client\" \"npm run build --prefix server\"",
    "analyze": "ANALYZE=true npm run analyze --prefix client"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "concurrently": "5.1.0",
    "eslint": "~6.8.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  }
}
